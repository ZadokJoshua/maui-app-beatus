<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Beatus.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Beatus.Maui"
    xmlns:views="clr-namespace:Beatus.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#243B24"
    >
<!-- Pages not registered in shell as tabs should be registered in App.Shell.cs for routing-->
    <TabBar>
        <ShellContent
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" 
            Icon="search.png"
            
            Title="Identify"/>

        <ShellContent
            ContentTemplate="{DataTemplate views:SavedPage}"
            Route="SavedPage"
            Icon="saved.png"
            Title="Saved"/>
    </TabBar>
</Shell>
